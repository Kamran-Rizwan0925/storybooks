<h1>Stories</h1>

<div class="row">
{{#if stories}}  
    {{#each stories}}
        <div class="col s12 m4">
            <div class="card" style="position: relative;">
                <div class="card-image" style="position: absolute;">
                    {{{editIcon user ../user _id}}}
                </div>
                <div class="card-content center-align">
                    <h5>{{title}}</h5>
                    <p>{{stripTags (truncate body 50)}}</p>
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}" alt="Profile Image">
                        <a href="/stories/user/{{user._id}}">{{user.displayName}}</a>
                    </div>
                </div>
                <div class="card-action center-align">
                    <a href="/stories/{{_id}}" class="btn waves-effect waves-light btn-small">Read more</a>
                </div>
            </div>
        </div>
    {{/each}}    
{{else}}
    <p>No pulic stories to display!</p>
{{/if}} 
</div>
